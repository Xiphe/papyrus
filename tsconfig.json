{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "module": "es2015",
    "target": "es5",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
